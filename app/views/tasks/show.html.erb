<h2><%= @task.title %></h2>
<div class="details">
  <p><%= @task.details %></p>
</div>

<% if @task.completed %>
  <p><i class="far fa-check-circle"></i> This task is completed</p>
<% else %>
  <p><i class="far fa-circle"></i> This task is not completed yet</p>
<% end %>

<hr>

<%= link_to tasks_path do%>
  <i class="fas fa-undo"></i> Back to list
<% end %>
