<h2> My tasks </h2>
<% if @tasks.empty? %>
  <p>No task!</p>
<% else %>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-circle"></i>
        <% else %>
          <i class="far fa-circle"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
<% end %>

<hr>


<%= link_to new_task_path do%>
  <i class="fas fa-plus mr-1"></i>Add a new task
<% end %>


